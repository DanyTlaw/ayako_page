

  <fieldset>
    <div class="toptitle"><%= t('.title')%></div>
  </fieldset>
<div class="col-md-8">
<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('.name') %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('.email') %><br>
    <%= f.text_field :email,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('.message') %><br>
    <%= f.text_area :message, rows: 3,class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('.button'), class: "btn btn-success"%>
  </div>
<% end %>
</div>
