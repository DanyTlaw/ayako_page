<fieldset>
  <div class="toptitle"><%= @picture.name %></div>
</fieldset>
<div class="col-md-12">
  <div class="col-md-6">
   <%= image_tag @picture.url_url(:big) %>
   <div class="col-md-12">
    <h5>Like this picture? Share it!</h5> 
    <%= social_share_button_tag(@picture.name) %>
   </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">    
        <div class="panel-body">
        <h3><%= t('.about_picture')%></h3>
          <div class="col-md-6">
            <p><strong><%= t('.version')%>:</strong></p>
            <p><strong><%= t('.price')%>:</strong></p>
            <p><strong><%= t('.size')%>:</strong></p>
          </div>
          <div class="col-md-6">
            <p><%= @picture.version%></p>
            <p><%= @picture.price%></p>
            <p><%= @picture.size%></p>
          </div>
          <div class="col-md-12"><p><strong><%= t('.desc')%>:</strong></p>
          <p><%= @picture.description %></p>
          <% if @picture.for_sale%>       
            <%= button_to "Add to Cart", line_items_path(picture_id: @picture),  class: "btn btn-primary"%>
          <% end %>
  
          </div>
        </div>
    </div>
      <div class="panel panel-default">  
        <div class="panel-body">
        <h3><%= t('.difversions')%></h3>
          <% if @verspictures.size > 1 %>
            <% @verspictures.each do |pic| %>
              <div class="col-md-4">
                <div class="img-wrapper-thumb">
                <%= link_to theme_picture_path(pic.theme_id, pic.id) do %>
                  <div class="imgbox">
                    <%= image_tag pic.url, size: "100x100"%>
                    <span class="caption fade-caption">
                      <p>Version: <%= pic.version%></p>
                    </span>                 
                  </div>
                <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>

