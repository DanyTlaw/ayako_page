<fieldset>
	<legend>News</legend>
</fieldset>
<% Post.all.each do |post| %>
 <div class="panel panel-default" >
 	<div class="panel-body">
 	 	<h3><%= post.title %></h3>
	 	<div class="post_text">
	 		<%= post.content%>
	 	</div>

 		<div class="post-button">
 			<%= button_to "Show more", post_path(post.id),class: "btn btn-primary" %>
 		</div>
 	</div>


 </div>
<% end %>
